<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.android.uidemo.Detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <!--
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                -->


                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:popupTheme="@style/AppTheme.PopupOverlay" />

                </android.support.design.widget.AppBarLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/rootCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:padding="3dp"
                    card_view:cardCornerRadius="4dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="#222222"
                            android:textSize="27dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Watch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Name"
                            android:fontFamily="sans-serif-light"
                            android:padding="2dp"
                            android:textAllCaps="true"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/Phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Watch"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15dp" />


                        <TableLayout
                            android:id="@+id/PriceInfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/Phone"
                            android:paddingTop="5dp"
                            android:stretchColumns="1">

                            <TableRow android:background="@drawable/border">

                                <TextView
                                    android:layout_column="1"
                                    android:cursorVisible="false"
                                    android:fontFamily="sans-serif-condensed"
                                    android:padding="3dip"
                                    android:text="Buying Price:"
                                    android:textColor="#000" />

                                <EditText
                                    android:id="@+id/tvBuyingPrice"
                                    android:enabled="false"
                                    android:gravity="right"
                                    android:inputType="number"
                                    android:longClickable="false"
                                    android:padding="3dip" />
                            </TableRow>

                            <TableRow android:background="@drawable/border">

                                <TextView
                                    android:layout_column="1"
                                    android:fontFamily="sans-serif-condensed"
                                    android:padding="3dip"
                                    android:text="Delivery Charges:"
                                    android:textColor="#000" />

                                <EditText
                                    android:id="@+id/tvDelivery"
                                    android:enabled="false"
                                    android:gravity="right"
                                    android:inputType="number"
                                    android:padding="3dip"
                                    android:text="â‚¹ 150"
                                    android:textCursorDrawable="@null" />
                            </TableRow>

                            <!--                    <View
                                                    android:layout_height="2dip"
                                                    android:background="#FF909090" />-->

                            <TableRow android:background="@drawable/border">

                                <TextView
                                    android:layout_column="1"
                                    android:fontFamily="sans-serif-condensed"
                                    android:padding="3dip"
                                    android:text="Total:"
                                    android:textColor="#000" />

                                <EditText
                                    android:id="@+id/tvTotal"
                                    android:enabled="false"
                                    android:gravity="right"
                                    android:inputType="number"
                                    android:padding="3dip" />

                                <!--                    <View
                                                        android:layout_height="2dip"
                                                        android:background="#FF909090" />-->

                            </TableRow>
                        </TableLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:padding="3dp"
                    card_view:cardCornerRadius="4dp"
                    card_view:contentPadding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/getCOD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COD"
                            android:textColor="#F50057"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                        <TableLayout
                            android:id="@+id/CODTable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:stretchColumns="1"
                            android:visibility="gone">

                            <TableRow android:background="@drawable/border">

                                <TextView
                                    android:layout_column="1"
                                    android:fontFamily="sans-serif-condensed"
                                    android:padding="3dip"
                                    android:text="Company"
                                    android:textColor="#000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:gravity="right"
                                    android:padding="3dip"
                                    android:text="COD AVAILABLITY"
                                    android:textColor="#000"
                                    android:textStyle="bold" />

                            </TableRow>

                            <TableRow android:background="@drawable/border">

                                <TextView
                                    android:layout_column="1"
                                    android:cursorVisible="false"
                                    android:fontFamily="sans-serif-condensed"
                                    android:padding="3dip"
                                    android:text="FEDEX:"
                                    android:textColor="#000" />

                                <TextView
                                    android:id="@+id/FEDEXCOD"
                                    android:gravity="right"
                                    android:padding="3dip"
                                    android:textColor="#000" />
                            </TableRow>

                            <TableRow android:background="@drawable/border">

                                <TextView
                                    android:layout_column="1"
                                    android:fontFamily="sans-serif-condensed"
                                    android:padding="3dip"
                                    android:text="DELHIVERY"
                                    android:textColor="#000" />

                                <TextView
                                    android:id="@+id/DELHIVERYCOD"
                                    android:gravity="right"
                                    android:padding="3dip"
                                    android:textColor="#000" />

                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:padding="3dp"
                    card_view:cardCornerRadius="4dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/CourierText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Courier:"
                            android:textColor="#F50057"
                            android:textSize="15dp"
                            android:textStyle="bold"

                            />

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/CourierText"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:checked="false"
                                android:text="FedEx" />

                            <RadioButton
                                android:id="@+id/radioButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.13"
                                android:checked="false"
                                android:text="Delhivery" />
                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/LinearLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/radioGroup"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TrackingNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tracking Number:"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/tvTrackingNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:enabled="false"
                                android:hint="Enter Tracking ID"
                                android:inputType="number"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getDeliveyStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/LinearLayout1"
                            android:background="#E3F2FD"
                            android:gravity="bottom"
                            android:text="Show Status"
                            android:textColor="#01579B"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/getDeliveyStatus"
                            android:background="#E3F2FD"
                            android:padding="2dp"
                            android:text="Share"
                            android:textColor="#01579B"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <ScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_below="@+id/imageView">

                            <WebView
                                android:id="@+id/webview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/getDeliveyStatus"
                                android:visibility="gone" />
                        </ScrollView>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:padding="3dp"
                    card_view:cardCornerRadius="4dp"
                    card_view:contentPadding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS:"
                            android:textColor="#F50057"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/ShowMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="#E3F2FD"
                                android:text="Show More"
                                android:textColor="#01579B"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:id="@+id/TableLayout2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">

                                    <TableRow>

                                        <TextView
                                            android:layout_column="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:padding="3dip"
                                            android:text="Address1:"
                                            android:textColor="#000" />

                                        <EditText
                                            android:id="@+id/tvAddres"
                                            android:enabled="false"
                                            android:padding="3dip"
                                            android:textColor="#000" />
                                    </TableRow>


                                    <TableRow>

                                        <TextView
                                            android:layout_column="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:padding="3dip"
                                            android:text="Address2:"
                                            android:textColor="#000" />

                                        <EditText

                                            android:id="@+id/tvAddres2"
                                            android:enabled="false"
                                            android:padding="3dip"
                                            android:textColor="#000" />
                                    </TableRow>


                                    <TableRow>

                                        <TextView
                                            android:layout_column="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:padding="3dip"
                                            android:text="Pin Code:"
                                            android:textColor="#000" />

                                        <EditText
                                            android:id="@+id/tvPinCode"
                                            android:enabled="false"
                                            android:padding="3dip"
                                            android:textColor="#000" />
                                    </TableRow>

                                    <TableRow>

                                        <TextView
                                            android:layout_column="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:padding="3dip"
                                            android:text="City,State:"
                                            android:textColor="#000" />

                                        <EditText
                                            android:id="@+id/tvCityState"
                                            android:enabled="false"
                                            android:padding="3dip"
                                            android:text=""
                                            android:textColor="#000" />
                                    </TableRow>

                                </TableLayout>
                            </HorizontalScrollView>
                        </ScrollView>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:background="#E91E63"
            android:src="@drawable/ic_mode_edit" />
    </android.support.design.widget.CoordinatorLayout>
